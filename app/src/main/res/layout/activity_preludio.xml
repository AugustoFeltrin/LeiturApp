<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".Preludio">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/akshar"
        android:shadowRadius="5"
        android:text="Prelúdio"
        android:textColor="#F0ECDA"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/paragrafo1"
        android:layout_width="351dp"
        android:layout_height="314dp"
        android:allowUndo="true"
        android:fontFamily="@font/akshar"
        android:layoutDirection="rtl"
        android:text="A história de Fahrenheit 451 se passa em um futuro distópico onde o governo proíbe livros, considerados perigosos por incitar pensamento crítico. Em vez de apagar incêndios, os bombeiros os queimam para manter a sociedade alienada. Guy Montag, o protagonista, é um desses bombeiros, vivendo uma vida rotineira e conformada, sem questionar seu papel. "
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/paragrafo2"
        android:layout_width="342dp"
        android:layout_height="251dp"
        android:allowUndo="true"
        android:fontFamily="@font/akshar"
        android:text="No entanto, tudo muda quando ele conhece Clarisse, sua jovem vizinha, que o faz refletir sobre sua vida e valores, despertando uma curiosidade que ele nunca sentira antes."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="109dp"
        android:layout_height="227dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/engrenagem" />

</androidx.constraintlayout.widget.ConstraintLayout>
